	//-  TODO, sort by % over comparison
	script(type="text/jst")#article-summary-row-templ
		.article-detail-row-container
			.destroy &times;
			<% selects.forEach(function(select){ %>
			<% if (select.kind == 'text'){ %>
			.cell.text.tooltipped(data-tooltip-align="left", id!="<%= id %>", aria-label!="<%= htmlDecode(title) %>")
				.title-text <%= title %>
			<% } else if (select.kind == 'date'){ %>
			.cell.date.single(data-created!="<%= created %>") <%= conciseDate(created) %>
			<% } else if (select.kind == 'metric'){ %>
			.cell.gfx.tooltipped(aria-label!="<%= prettyMetric(metrics[select.name], select.aggregation) + ' ' + select.display_name %>")
				.bullet-container
					.bullet(style!="width: <%= calcSize(select.name, metrics[select.name], comparisonMax, comparisonGroup) %>;")
					.marker(style!=" calcSize(<%= select.name %>, comparisonOperation, comparisonMax, comparisonGroup)")
			<% }  %>
			<% }); %>

